<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Update Member</title>

  <% include partials/header %>

</head>

<body>
  <!-- Sidenav Bar -->
  <% include partials/sidenav %>

    <!-- Background -->
    <div class="" style="background: black;">
      <img src="/images/Group/about.png" alt="Group Photo" class="pageBackgroundIMG">
    </div>

    <div class="container">
      <div class="row">
        <h1 style="text-align: center">Update an existing member</h1>
        

        <div style="width: 60%; margin: 30px auto; text-align: center;">
          <form action="/updatingOverview/newMember" method="POST">
            <span>Alumni or Current</span>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="member[current]" value="true">
              <label class="form-check-label">Current</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="member[current]" value="false">
              <label class="form-check-label">Alumni</label>
            </div>
            <br>

            <div class="form-group">
              <input class="form-control" type="text" placeholder="Full Name" name="member[name]">
            </div>

            <div class="form-group">
              <input class="form-control" type="text" placeholder="Image URL" name="member[image]">
            </div>

            <div class="form-group">
              <input class="form-control" type="text" placeholder="Year of graduation" name="member[year]">
            </div>


            <span>Does the member have a position?</span>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="member[hasPosition]" value="true">
              <label class="form-check-label">True</label>
            </div>
            <span>If true, what position?</span>
            <div class="form-group">
              <input class="form-control" type="text" placeholder="Position" name="member[position]">
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="member[hasPosition]" value="false">
              <label class="form-check-label">False</label>
            </div>

            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
            <a href="/updatingOverview">Go Back to the editing page</a>
          </form>
        </div>
      </div>
    </div>

    <% include partials/footer %>

      <script type="text/javascript">
        /* Set the width of the side navigation to 250px */
        function openNav() {
          document.getElementById("mySidenav").classList.remove("close");
          document.getElementById("mySidenav").classList.add("open");
        }

        /* Set the width of the side navigation to 0 */
        function closeNav() {
          document.getElementById("mySidenav").classList.remove("open");
          document.getElementById("mySidenav").classList.add("close");
        }

        function togAlum() {
          var nav = document.getElementById("Alumni");
          if (nav.style.display === 'inherit') {
            nav.style.display = 'none';
            document.getElementById("hrDivider").style.display = 'none';
          } else {
            nav.style.display = 'inherit';
            if (document.getElementById("Active").style.display === 'inherit') {
              document.getElementById("hrDivider").style.display = 'inherit';
            }
          }
        }

        function togActive() {
          var nav = document.getElementById("Active");
          if (nav.style.display === 'inherit') {
            nav.style.display = 'none';
            document.getElementById("hrDivider").style.display = 'none';
          } else {
            nav.style.display = 'inherit';
            if (document.getElementById("Alumni").style.display === 'inherit') {
              document.getElementById("hrDivider").style.display = 'inherit';
            }
          }
        }

        function togActiveAlum(ActiveOrAlum) {
          var members = ActiveOrAlum;

          if (members === "Active") {
            document.getElementById("Active").style.display = "inherit"
            document.getElementById("Alumni").style.display = "none"
          } else {
            document.getElementById("Active").style.display = "none"
            document.getElementById("Alumni").style.display = "inherit"
          }

        }
      </script>


</body>

</html>
